<MudTr>
    <MudTd>@CategoryName</MudTd>
    <MudTd>
        <MudSelect T="int?" Value="Value" ValueChanged="OnValueChanged"
                  Label="" Variant="Variant.Outlined" Margin="Margin.Dense" Style="max-width: 80px;">
            <MudSelectItem T="int?" Value="null">-</MudSelectItem>
            <MudSelectItem T="int?" Value="0">0</MudSelectItem>
            <MudSelectItem T="int?" Value="Points">@Points</MudSelectItem>
        </MudSelect>
    </MudTd>
</MudTr>

@code {
    [Parameter] public string CategoryName { get; set; } = string.Empty;
    [Parameter] public int Points { get; set; }
    [Parameter] public int? Value { get; set; }
    [Parameter] public EventCallback<int?> OnValueChanged { get; set; }
}
